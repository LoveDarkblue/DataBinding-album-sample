<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.databinding">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".activity.AlbumApp">
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CreateEditAlbumActivity"
            android:label="@string/create_album" >
        </activity>
        <activity
            android:name=".activity.ViewAlbumActivity"
            android:label="@string/view_album" >
        </activity>
        <activity
            android:name=".activity.ViewAlbumsActivity"
            android:label="@string/albums" >
        </activity>
    </application>

</manifest>
